# Production Environment Configuration
# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "resumerepublic"
domain_name  = "resumerepublic.com"
api_domain_name = "api.resumerepublic.com"
parent_domain_name = "resumerepublic.com"

# Networking Configuration
vpc_cidr = "10.0.0.0/16"
availability_zone_count = 2
# private_subnets = ["10.0.1.0/24", "10.0.2.0/24"]  # Removed - no longer needed
database_subnets = ["10.0.10.0/24", "10.0.20.0/24"]
public_subnets  = ["10.0.101.0/24", "10.0.102.0/24"]
backend_port = 8000

# Database Configuration
postgres_version = "17.4"
db_instance_class = "db.t3.micro"
db_allocated_storage = 20
db_max_allocated_storage = 100
db_storage_type = "gp2"
db_name = "resumerepublic"
db_username = "resumerepublic_user"
db_password = ""  # Ignored when db_manage_master_user_password is true
db_manage_master_user_password = true  # Use AWS managed password with rotation
db_password_rotation_days = 30  # Rotate password every 30 days
db_kms_key_id = null  # Use default AWS managed key
db_iam_database_authentication_enabled = true  # Enable IAM database authentication
db_backup_retention_period = 7
db_backup_window = "03:00-04:00"
db_maintenance_window = "sun:04:00-sun:05:00"
db_skip_final_snapshot = false
db_performance_insights_enabled = false
db_performance_insights_retention_period = 7
db_monitoring_interval = 0

# Compute Configuration
task_cpu = 256
task_memory = 512
backend_desired_count = 1
log_retention_days = 7

# DNS Configuration
create_route53_zone = false
create_www_record = true

# IAM Configuration
create_ec2_ssm_role = false

# Application Secrets
# Leave empty to auto-generate a secure secret key, or provide your own
secret_key = ""

# OAuth Configuration
google_client_id     = "your-google-client-id"
google_client_secret = "your-google-client-secret"
github_client_id     = "your-github-client-id"
github_client_secret = "your-github-client-secret"

# External Services
openrouter_api_key = "your-openrouter-api-key"
openrouter_llm_model = "anthropic/claude-sonnet-4"

# Application Configuration
# backend_url is automatically set to the ALB DNS name during deployment

# AWS Configuration (optional - for additional AWS services)
aws_access_key_id = ""
aws_secret_access_key = ""
aws_s3_bucket = ""

# SSL/TLS Configuration
ssl_cipher_suites = "ECDHE+AESGCM:ECDHE+CHACHA20:DHE+AESGCM:DHE+CHACHA20:!aNULL:!MD5:!DSS"
min_tls_version = "TLSv1.2"
